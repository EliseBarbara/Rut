<Controls:MetroWindow x:Class="Vista.Crear_Contrato"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:behaviours="clr-namespace:MahApps.Metro.Behaviours;assembly=MahApps.Metro"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
                      
        xmlns:local="clr-namespace:Vista"
        mc:Ignorable="d"
        Title="OnBreak - Crear Contrato" Height="846.335" Width="718.128" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,2,-104" Background="#FF84D9E8" Height="818" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="119*"/>
            <RowDefinition Height="88"/>
            <RowDefinition Height="6"/>
            <RowDefinition Height="279*"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="Creación :" HorizontalAlignment="Left" Height="36" Margin="62,139,0,0" VerticalAlignment="Top" Width="118" Grid.Row="3"/>
        <Label x:Name="label_Copy" Content="Termino :" HorizontalAlignment="Left" Height="36" Margin="348,139,0,0" VerticalAlignment="Top" Width="118" Grid.Row="3"/>
        <Label x:Name="label1" Content="Inicio" HorizontalAlignment="Left" Margin="22,191,0,0" VerticalAlignment="Top" Width="74" FontWeight="Bold" FontSize="14" Height="29"/>
        <Separator HorizontalAlignment="Left" Height="83" Margin="80,171,0,0" VerticalAlignment="Top" Width="478" Grid.RowSpan="2"/>
        <Label x:Name="label2" Content="Fecha:" HorizontalAlignment="Left" Margin="49,24,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="43"/>
        <Label x:Name="label3" Content="hora:" HorizontalAlignment="Left" Margin="355,24,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="37"/>
        <TextBox x:Name="txtHora" HorizontalAlignment="Left" Height="26" Margin="412,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="34" Grid.Row="1" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="1.157"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label x:Name="label4" Content="Dirección:" HorizontalAlignment="Left" Margin="49,4,0,0" VerticalAlignment="Top" Grid.Row="3" Height="26" Width="62"/>
        <TextBox x:Name="txtDireccion1" HorizontalAlignment="Left" Height="26" Margin="143,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="282" Grid.Row="3" TextChanged="txtDireccion1_TextChanged"/>
        <Separator x:Name="txtDireccion" HorizontalAlignment="Left" Height="100" Margin="90,76,0,0" VerticalAlignment="Top" Width="484" RenderTransformOrigin="-0.522,0.157" Grid.Row="3">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.294"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>
        </Separator>
        <Label x:Name="label5" Content="Vigente:" HorizontalAlignment="Left" Margin="454,10,0,0" VerticalAlignment="Top" Grid.Row="3" Height="26" Width="66"/>
        <Label x:Name="label6" Content="Tipo Evento:" HorizontalAlignment="Left" Margin="62,204,0,0" VerticalAlignment="Top" Grid.Row="3" Height="26" Width="82"/>
        <ContentControl Content="Observaciones:" HorizontalAlignment="Left" Margin="49,302,0,0" VerticalAlignment="Top" Grid.Row="3" Height="16" Width="80"/>
        <DatePicker x:Name="dpFecha" HorizontalAlignment="Left" Margin="143,23,0,0" VerticalAlignment="Top" Width="157" Grid.Row="1" Height="26"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="233,398,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="3" Height="16" Width="0"/>
        <TextBox x:Name="txtObservaciones" HorizontalAlignment="Left" Height="101" Margin="162,292,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="325" Grid.Row="3"/>
        <Label x:Name="label_Copy1" Content="Número:" HorizontalAlignment="Left" Height="36" Margin="49,22,0,0" VerticalAlignment="Top" Width="118"/>
        <TextBox x:Name="txtNumero" HorizontalAlignment="Left" Height="26" Margin="164,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="txtNumero_TextChanged"/>
        <Button x:Name="btnBuscarContrato" Content="Buscar" HorizontalAlignment="Left" Margin="378,22,0,0" VerticalAlignment="Top" Width="75" Height="29"/>
        <Button x:Name="button1" Content="?" HorizontalAlignment="Left" Margin="313,22,0,0" VerticalAlignment="Top" Width="37" Height="26"/>
        <Label x:Name="label_Copy2" Content="Nombre:" HorizontalAlignment="Left" Height="36" Margin="49,150,0,0" VerticalAlignment="Top" Width="118"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Height="26" Margin="164,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="303" IsEnabled="False"/>
        <Label x:Name="label_Copy4" Content="Rut Cliente:" HorizontalAlignment="Left" Height="36" Margin="49,86,0,0" VerticalAlignment="Top" Width="118"/>
        <TextBox x:Name="txtBuscarCliente" HorizontalAlignment="Left" Height="26" Margin="164,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnBuscarCliente" Content="Buscar" HorizontalAlignment="Left" Margin="378,84,0,0" VerticalAlignment="Top" Width="75" Height="29"/>
        <Button x:Name="button1_Copy" Content="?" HorizontalAlignment="Left" Margin="313,86,0,0" VerticalAlignment="Top" Width="37" Height="26"/>
        <Label x:Name="label7" Content=":" HorizontalAlignment="Left" Margin="454,24,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="13" RenderTransformOrigin="2.154,0.404"/>
        <TextBox x:Name="txtMinuto" HorizontalAlignment="Left" Height="26" Margin="472,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="35" RenderTransformOrigin="0.143,0.423" Grid.Row="1"/>
        <TextBox x:Name="txtTipo" HorizontalAlignment="Left" Height="26" Margin="161,204,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" Grid.Row="3" TextChanged="txtTipo_TextChanged"/>
        <Label x:Name="label8" Content="Evento" HorizontalAlignment="Left" Margin="22,90,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="27" Width="74" FontSize="14" Grid.Row="3"/>
        <DatePicker x:Name="dpCreacion" HorizontalAlignment="Left" Margin="162,141,0,0" Grid.Row="3" VerticalAlignment="Top"/>
        <DatePicker x:Name="dpTermino" HorizontalAlignment="Left" Margin="418,141,0,0" Grid.Row="3" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <DatePicker.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-3.066"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.696"/>
                </TransformGroup>
            </DatePicker.RenderTransform>
        </DatePicker>
        <Button x:Name="btnCrear" Content="Crear" HorizontalAlignment="Left" Margin="286,439,0,0" Grid.Row="3" VerticalAlignment="Top" Width="75" Click="btnCrear_Click"/>
        <RadioButton x:Name="rbVigente" Content="" HorizontalAlignment="Left" Margin="520,12,0,0" Grid.Row="3" VerticalAlignment="Top" Checked="radioButton_Checked"/>

    </Grid>
</Controls:MetroWindow>
